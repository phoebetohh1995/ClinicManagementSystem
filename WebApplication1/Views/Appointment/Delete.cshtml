@using WebApplication1.Models
@model Appointment

<form method="post" asp-action="Delete">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Appointment</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="Doctor.Name"></label>
			<input asp-for="Doctor.Name" disabled class="form-control" />
		</div>
		<div class="mb-2">
			<label asp-for="Patient.Name"></label>
			<input asp-for="Patient.Name" disabled class="form-control" />
		</div>
			<div class="mb-2">
			<label asp-for="ApptDateTime"></label>
			<input asp-for="ApptDateTime" disabled class="form-control" />
		</div>
		<button type="submit" class="btn btn-danger" style="width:100px">Delete</button>
		<a asp-controller="Appointment" asp-action="Index" class="btn btn-secondary" style="width:100px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}